@model IEnumerable<StoreApp_MVC.Models.Product>


@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Products List</h2>
        </div>
        <div class="col-6 text-right">
            <h2 class="text-primary">
                <a class="btn btn-primary" asp-action="UpdateInsert">
                    <i class="fas fa-plus"></i>&nbsp; Add New Product
                </a>
            </h2>
        </div>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Category
                    </th>
                    <th>
                        Type
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td width="30%">@item.Name</td>
                    <td width="30%">@item.Price</td>
                    <td width="20%">@item.Category.Name</td>
                    <td width="20%">@item.Type.Name</td>
                    @*<td width="20%"><img src="@WebConstance.ImagePath@Model.Product.Image" style="width:75px; height:75px; border-radius: 50%" /></td>*@
                    <td class="w-75 btn-group p-2">
                        <a class="btn btn-outline-warning mx-2" asp-controller="Product" asp-route-Id="@item.Id" asp-action="UpdateInsert">
                            <i class="fas fa-edit"></i>&nbsp;
                        </a>
                        <a class="btn btn-outline-danger mx-2" asp-controller="Product" asp-route-Id="@item.Id" asp-action="Delete">
                            <i class="fas fa-trash"></i>&nbsp;
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    @if (Model.Count() <= 0)
    {
        <p class="text-info">There are No Products</p>
    }
</div>

