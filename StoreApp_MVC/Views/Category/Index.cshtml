@model IEnumerable<StoreApp_MVC.Models.Category>


@{
    ViewData["Title"] = "Index";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-right">
            <h2 class="text-primary">
                <a class="btn btn-primary" asp-controller="Category" asp-action="Create">
                    <i class="fas fa-plus"></i>&nbsp; Create New Category
                </a>
            </h2>
        </div>
    </div>
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                    <th>
                        Display Order
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td width="50%">@item.Name</td>
                        <td width="30%">@item.DisplayOrder</td>
                        <td class="w-75 btn-group p-2">
                            <a class="btn btn-outline-warning mx-2" asp-controller="Category" asp-route-Id="@item.Id" asp-action="Edit">
                                <i class="fas fa-edit"></i>&nbsp;
                            </a>
                            <a class="btn btn-outline-danger mx-2" asp-controller="Category" asp-route-Id="@item.Id" asp-action="Delete">
                                <i class="fas fa-trash"></i>&nbsp;
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    <p class="text-info">There are No Category</p>
</div>

