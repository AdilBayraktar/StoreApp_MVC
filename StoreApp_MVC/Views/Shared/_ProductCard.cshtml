@model StoreApp_MVC.Models.Product
    
<div class="col-lg-4 col-md-6 pb-4 filter @Model.Category.Name.Replace(' ','_')">

    <div class="card bg-light rounded shadow">
        <div class="card-body px-3 pt-3 pb-1 row">
            <div class="col-7"><label class="float-left font-weight-bold">@Model.Name</label></div>
            <div class="col-5"><label class="float-right text-muted"><span class="text-light bg-warning p-2 rounded h5">@string.Format("{0:c0}", Model.Price)</span> </label> </div>
        </div>
        <img class="card-img-top img-fluid d-block mx-auto mb-3" src="@WebConstance.ImagePath@Model.Image" style="height: 250px !important" alt="Card image cap">
        <div class="card-body p-1 px-3 row">
            <div class="col-6">
                <span class="badge p-2 border w-100" style="background-color:lavenderblush">@Model.Category.Name</span>
            </div>
            <div class="col-6 border-0">
                <span class="badge p-2 border w-100" style="background-color:aliceblue">@Model.Type.Name</span>
            </div>
            <div class="col-12 pt-2" style="font-size:13px; text-align:justify">
                <p> @Model.ShortDescription</p>
            </div>
            <div class="col-12 p-1">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-primary text-light form-control btn-sm p-2" style="height:40px">View Details</a>
            </div>
        </div>
    </div>
</div>
