@model StoreApp_MVC.Models.ViewModels.HomeVM

<div class="container">
    <div class="text-center">
        <button class="btn btn-dark filter-button" data-filter="all">All</button>
        @foreach (var item in Model.Categories)
        {
            <button class="btn btn-outline-secondary filter-button" data-filter="@item.Name.Replace(' ', '_')">
                @item.Name
            </button>
        }
        <br />
        <div class="row mt-4">
            @foreach (var product in Model.Products)
            {
                <partial name="_ProductCard" model="product"></partial>
            }
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {

            $(".filter-button").click(function () {

                var value = $(this).attr('data-filter');
                if (value == "all") {
                    $('.filter').show('1000');
                }
                else {
                    $(".filter").not('.' + value).hide('3000');
                    $('.filter').filter('.' + value).show('3000');

                }
            });

        });
    </script>
}
